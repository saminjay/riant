<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/destination"
            android:text="Destination: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignBaseline="@+id/destinationContent"
            android:layout_alignBottom="@+id/destinationContent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/destinationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Dummy"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_below="@+id/map"
            android:layout_toRightOf="@+id/destination"
            android:layout_toEndOf="@+id/destination"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On 15 april 2017 at 10:30am"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/destination"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/efareContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignBottom="@+id/destinationContent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/date"
            android:layout_marginTop="12dp"
            android:text="Dummy" />
    </RelativeLayout>
</android.support.v7.widget.CardView>