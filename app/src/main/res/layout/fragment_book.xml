<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/pickup"
            android:text="Pick up address: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/pickupContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Dummy"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/date"
            android:layout_alignEnd="@+id/date" />

        <TextView
            android:id="@+id/destination"
            android:text="Destination: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignLeft="@+id/pickup"
            android:layout_alignStart="@+id/pickup"
            android:layout_below="@+id/pickup" />

        <TextView
            android:id="@+id/destinationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Dummy"
            android:layout_below="@+id/pickupContent"
            android:layout_alignLeft="@+id/pickupContent"
            android:layout_alignStart="@+id/pickupContent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On 15 april 2017 at 10:30am"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/destination"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/distanceContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/date"
            android:layout_toLeftOf="@+id/destinationContent"
            android:layout_toStartOf="@+id/destinationContent" />

        <TextView
            android:id="@+id/driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver's Name:"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/distance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/driverContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_above="@+id/contact"
            android:layout_toRightOf="@+id/distanceContent"
            android:layout_toEndOf="@+id/distanceContent" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/driver"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/contactContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@id/driverContent"
            android:layout_alignLeft="@+id/driverContent"
            android:layout_alignStart="@+id/driverContent" />

        <TextView
            android:id="@+id/efare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Fare:"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignTop="@+id/date"
            android:layout_toLeftOf="@+id/efareContent"
            android:layout_toStartOf="@+id/efareContent" />

        <TextView
            android:id="@+id/efareContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignBaseline="@+id/efare"
            android:layout_alignBottom="@+id/efare"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
